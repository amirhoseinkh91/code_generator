<?xml version="1.0" encoding="UTF-8"?>
<!--<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >-->
<!DOCTYPE hibernate-mapping SYSTEM "hibernate-config/dtd" >

<hibernate-mapping package="example.user">

    <class module="user" name="User" table="USERS" schema="justro">
        <id name="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>

        <property name="username" type="string" not-null="true" unique="true"/>

        <property name="password" type="string" not-null="true" unique="false"/>

        <component module="location" name="address" class="example.address.Address">
            <property name="city" type="string" column="address_city"/>
        </component>

        <joined-subclass name="ExtendedUser">
            <key column="id"/>
        </joined-subclass>

    </class>

</hibernate-mapping>